<%- include('header') %>
    <main>
        <h2>Games</h2>
        <div class="categories">
            
            <!-- Games -->
             
            <% games.forEach((game) => { %>
                <a href=<%=game.link%>>
                  <div class="category-card">
                    <h3><%= game.name %></h3>
                    <p>Price: $ <%= game.price %></p>
                    <p>Platform: <%= game.platform %></p>
                    <p>Condition: <%= game.condition %></p>
                  </div>
                </a>
            <% }) %>
            
        </div>

        <h2>Consoles</h2>
        <div class="categories">
            <!-- Consoles -->
            <% consoles.forEach((console) => { %>
              <a href=<%=console.link%>>
                <div class="category-card">
                    <h3><%= console.name %></h3>
                    <p>Price: $ <%= console.price %></p>
                    <p>Platform: <%= console.platform %></p>
                    <p>Condition: <%= console.condition %></p>
                </div>
              </a>
            <% }) %>
        </div>
    </main>
<%- include('footer') %>
